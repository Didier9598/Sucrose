<Application x:Class="Sucrose.Portal.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:xf="clr-namespace:XamlFlair;assembly=XamlFlair.WPF"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:helpers="clr-namespace:Sucrose.Portal.Helpers">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ControlsDictionary />
                <xf:XamlFlairResources />
                <ui:ThemesDictionary ApplicationTheme="Dark" />
                <ResourceDictionary Source="Locales/Locale.EN.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <helpers:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
            <helpers:NameToPageTypeConverter x:Key="NameToPageTypeConverter" />
            <helpers:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>