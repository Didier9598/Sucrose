<Page x:Class="Sucrose.Portal.Views.Pages.Library.FullLibraryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Sucrose.Portal.Views.Pages.Library"
      xmlns:controls="clr-namespace:Sucrose.Portal.Controls"
      d:DataContext="{d:DesignInstance local:FullLibraryPage, IsDesignTimeCreatable=False}"
      Title="{DynamicResource Portal.FullLibraryPage.Title}"
      Loaded="FullLibraryPage_Loaded"
      d:DesignHeight="600"
      d:DesignWidth="800"
      mc:Ignorable="d">
    <Grid>
        <Frame x:Name="Empty" Visibility="Hidden">
            <Frame.Content>
                <local:SearchLibraryPage />
            </Frame.Content>
        </Frame>
        <controls:LibraryWrapPanel x:Name="ThemeLibrary" Margin="10 0 10 10" HorizontalAlignment="Left" VerticalAlignment="Top" />
    </Grid>
</Page>